		<!-- Stripper with fire bow attack -->
		<entity_class name="zombieFireBowStripper" extends="zombieDarlene">
			<property name="Tags" value="entity,zombie,walker"/>
			<property name="Mesh" value="#Entities/Zombies?Prefabs/ZCocktailWaitress.prefab"/>

			<!-- Gameplay -->
			<property name="HandItem" value="meleeHandFireArrow"/>
			
			<property name="AITask-1" value="RangedAttackTarget" data="itemType=1;cooldown=1;duration=5"/>
