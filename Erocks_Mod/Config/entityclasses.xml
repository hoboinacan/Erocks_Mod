<configs>
	<append xpath="/entity_classes">
		<!-- Wolf with an electric cone attack -->
		<entity_class name="animalWolfElectric" extends="animalTemplateHostile">
			<property name="SizeScale" value="1.3"/>
			<property name="Tags" value="entity,animal,hostile,wolf,boss"/>
			<property name="MapIcon" value="ui_game_symbol_tracking_wolf"/>
			<property name="TrackerIcon" value="ui_game_symbol_tracking_wolf"/>
			<property name="AvatarController" value="AvatarAnimalController"/>
			<property name="ModelType" value="Standard"/>
			<property name="HasRagdoll" value="true"/>
			<property name="HasDeathAnim" value="true"/>
			<property name="RootMotion" value="true"/>
			<property name="RagdollOnDeathChance" value=".5"/>
			<property name="PhysicsBody" value="wolf"/>
			<property name="Mass" value="100"/>
			<property name="Prefab" value="/Entities/Animals/Wolf/animalStandardWolfRagdoll"/>
			<property name="ExperienceGain" value="1000"/>

			<property name="AITask-1" value="BreakBlock"/>
			<property name="AITask-2" value="RangedAttackTarget" data="itemType=1;cooldown=4;duration=5"/>
			<property name="AITask-3" value="Leap" data="legs=4"/>
			<property name="AITask-4" value="ApproachAndAttackTarget" data="class=EntityAnimal,30,EntityPlayer,40,EntityZombie,20"/>
			<property name="AITask-5" value="ApproachSpot"/>
			<property name="AITask-6" value="Look"/>
			<property name="AITask-7" value="Wander"/>
			<property name="AITarget-1" value="SetAsTargetIfHurt"/>
			<property name="AITarget-2" value="SetNearestEntityAsTarget" data="class=EntityPlayer,30,15,EntityNPC,30,15,EntityAnimal,30,15"/>
			<property name="AITarget-3" value="BlockingTargetTask"/>

			<property name="DismemberMultiplierHead" value=".5"/>
			<property name="SightRange" value="50"/>
			<property name="SoundRandom" value="wolfroam"/>
			<property name="SoundAlert" value="wolfalert"/>
			<property name="SoundHurt" value="wolfpain"/>
			<property name="SoundDeath" value="wolfdeath"/>
			<property name="SoundAttack" value="wolfattack"/>
			<property name="SoundSense" value="wolfsense"/>
			<property name="SoundGiveUp" value="wolfgiveup"/>

			<property name="HandItem" value="meleeHandZombieElectricCone"/>
			<property name="JumpMaxDistance" value="3, 5"/>
			
			<effect_group name="Base Effects">
				<passive_effect name="HealthMax" operation="base_set" value="500"/>
				<passive_effect name="HealthMax" operation="perc_add" value="1"/> <!-- Animal HP scale -->
				<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="electricDeco"/>
			</effect_group>

			<drop event="Harvest" name="foodRawMeat" count="0" tool_category="Butcher"/>
			<drop event="Harvest" name="foodRawMeat" tag="butcherHarvest" count="40"/> <!-- animalWolf -->
			<drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="15"/>
			<drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="5"/>
			<drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="15"/>
			<drop event="Harvest" name="resourceBone" tag="allToolsHarvest" count="5"/>
			<drop event="Harvest" name="foodRawMeat" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceLeather" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceBone" count="1" tag="WasteTreasuresCompleteHarvest"/>
		</entity_class>

		<!-- Wolf with a fire cone attack -->
		<entity_class name="animalWolfFire" extends="animalWolfElectric">
			<property name="HandItem" value="meleeHandZombieFireCone"/>
			<property name="SoundSpawn" value="Ambient_Loops/a_fire_embersmoke_sm_lp"/>
			<effect_group name="Base Effects">
				<triggered_effect trigger="onSelfFirstSpawn" action="RemoveBuff" target="self" buff="electricDeco"/>
				<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="burningDeco"/>
			</effect_group>
			
			<drop event="Harvest" name="foodRawMeat" count="0" tool_category="Butcher"/>
			<drop event="Harvest" name="foodRawMeat" tag="butcherHarvest" count="40"/> <!-- animalWolf -->
			<drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="15"/>
			<drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="5"/>
			<drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="15"/>
			<drop event="Harvest" name="resourceBone" tag="allToolsHarvest" count="5"/>
			<drop event="Harvest" name="foodRawMeat" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceLeather" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceBone" count="1" tag="WasteTreasuresCompleteHarvest"/>
		</entity_class>

		<!-- "Dragon" with electric bombard attack -->
		<entity_class name="animalZombieElectricDragon" extends="animalZombieVulture">
			<property name="SizeScale" value="4"/>
			<property name="Tags" value="entity,animal,hostile,vulture,boss"/>
			<property name="Class" value="EntityVulture"/>
			<property name="EntityType" value="Animal"/>
			<property name="AvatarController" value="AvatarAnimalController"/>
			<property name="ModelType" value="Standard"/>
			<property name="HasRagdoll" value="true"/>
			<property name="PhysicsBody" value="vulture"/>
			<property name="Mass" value="300"/>
			<property name="Radiated" value=""/>

			<!-- Stealth -->
			<property name="SightRange" value="150"/>

			<property name="MoveSpeed" value=".7"/>
			<property name="MoveSpeedAggro" value="1.5, 1.5"/>
			<property name="MaxTurnSpeed" value="150"/>

			<property name="AITask-1" value="RangedAttackTarget" data="itemType=1"/>
			<property name="AITask-2" value="Territorial"/>
			<property name="AITask-3" value="ApproachDistraction"/>
			<property name="AITask-4" value="Look"/>
			<property name="AITask-5" value="Wander"/>

			<property name="HandItem" value="meleeHandZombieElectricBombard"/>

			<property name="ExperienceGain" value="5000"/>
			<property name="LootDropProb" value=".75"/>
			<property name="LootDropEntityClass" value="EntityLootContainerBoss"/>
			
			<effect_group name="Base Effects">
				<passive_effect name="HealthMax" operation="base_set" value="8000"/>
				<passive_effect name="HealthMax" operation="perc_set" value="1"/> <!-- Zombie HP scale -->
				<triggered_effect trigger="onSelfFirstSpawn" action="AddBuff" target="self" buff="electricDeco"/>
				<triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" target="self" cvar="RadiatedRegenAmount" operation="set" value="8"/>
				<triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" target="self" buff="buffRadiatedRegen"/>
				<triggered_effect trigger="onSelfFirstSpawn" action="ModifyCVar" target="self" cvar="EntityBoss" operation="set" value="1"/>
			</effect_group>

			<drop event="Harvest" name="foodRawMeat" count="0" tool_category="Butcher"/>
			<drop event="Harvest" name="foodRawMeat" tag="butcherHarvest" count="100"/> <!-- animalWolf -->
			<drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="30"/>
			<drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="20"/>
			<drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="30"/>
			<drop event="Harvest" name="resourceBone" tag="allToolsHarvest" count="10"/>
			<drop event="Harvest" name="foodRawMeat" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceLeather" count="1" tag="WasteTreasuresCompleteHarvest"/>
			<drop event="Harvest" name="resourceBone" count="1" tag="WasteTreasuresCompleteHarvest"/>
		</entity_class>

		<!-- "Dragon" with fire bombard attack -->
		<entity_class name="animalZombieFireDragon" extends="animalZombieVulture">
			<property name="SizeScale" value="4"/>
			<property name="Tags" value="entity,animal,hostile,vulture,boss"/>
